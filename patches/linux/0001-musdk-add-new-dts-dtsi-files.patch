+		port-id = <0x0>;
+		emac-data = <0x24>;
+		status = "disabled";
+	};
+
+	eth1@020000 {
+		interrupts = <0x0 0x26 0x4 0x0 0x2a 0x4 0x0 0x2e 0x4 0x0 0x32 0x4 0x0 0x36 0x4>;
+		port-id = <0x1>;
+		emac-data = <0x25>;
+		status = "disabled";
+	};
+*/
+};
