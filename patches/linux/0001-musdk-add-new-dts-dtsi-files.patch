+				musdk-status = "private";
+			};
+			uio-neta0 {
+				compatible = "marvell,uio-neta";
+				port_name = "eth0";
+				port_access = <&eth0>;
+				status = "okay";
+			};
+			uio-neta1 {
+				compatible = "marvell,uio-neta";
+				port_name = "eth1";
+				port_access = <&eth1>;
+				status = "okay";
+			};
+			uio-sam {
+				compatible = "marvell,uio-sam";
+				eip_access = <&eip97>;
+				status = "okay";
+			};
